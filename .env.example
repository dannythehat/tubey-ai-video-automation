# ==============================================
# TUBEY AI VIDEO AUTOMATION - ENVIRONMENT CONFIG
# ==============================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ----------------------------------------------
# OpenAI GPT-5 Configuration
# ----------------------------------------------
OPENAI_API_KEY=sk-proj-...
OPENAI_MODEL=gpt-5
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# ----------------------------------------------
# Supabase Configuration
# ----------------------------------------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...
SUPABASE_SERVICE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...

# ----------------------------------------------
# YouTube API Configuration
# ----------------------------------------------
YOUTUBE_CLIENT_ID=your-client-id.apps.googleusercontent.com
YOUTUBE_CLIENT_SECRET=your-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3001/auth/youtube/callback
YOUTUBE_REFRESH_TOKEN=your-refresh-token
YOUTUBE_CHANNEL_ID=your-channel-id

# ----------------------------------------------
# Text-to-Speech Configuration (Choose One)
# ----------------------------------------------
# Option 1: ElevenLabs (Premium quality)
ELEVENLABS_API_KEY=your-elevenlabs-key
ELEVENLABS_VOICE_ID=21m00Tcm4TlvDq8ikWAM

# Option 2: OpenAI TTS (Good quality, included with GPT)
USE_OPENAI_TTS=true
OPENAI_TTS_VOICE=alloy
OPENAI_TTS_MODEL=tts-1-hd

# ----------------------------------------------
# Application Configuration
# ----------------------------------------------
NODE_ENV=development
PORT=3001
FRONTEND_URL=http://localhost:3000

# ----------------------------------------------
# Video Processing Configuration
# ----------------------------------------------
VIDEO_OUTPUT_DIR=./temp-videos
VIDEO_MAX_DURATION=2700
VIDEO_DEFAULT_FPS=30
VIDEO_DEFAULT_RESOLUTION=1920x1080
VIDEO_CODEC=libx264
VIDEO_AUDIO_CODEC=aac

# ----------------------------------------------
# Storage Configuration
# ----------------------------------------------
MAX_FILE_SIZE=524288000
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
ALLOWED_VIDEO_TYPES=video/mp4,video/quicktime,video/x-msvideo

# ----------------------------------------------
# Queue Configuration (Bull)
# ----------------------------------------------
REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=1
QUEUE_MAX_RETRIES=3

# ----------------------------------------------
# Security
# ----------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this
CORS_ORIGIN=http://localhost:3000

# ----------------------------------------------
# Logging
# ----------------------------------------------
LOG_LEVEL=info
LOG_FILE=./logs/tubey.log

# ----------------------------------------------
# Feature Flags
# ----------------------------------------------
ENABLE_AUTO_PUBLISH=false
ENABLE_THUMBNAIL_GENERATION=true
ENABLE_CAPTIONS=true
ENABLE_BACKGROUND_MUSIC=false

# ----------------------------------------------
# Rate Limiting
# ----------------------------------------------
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ----------------------------------------------
# Development Tools
# ----------------------------------------------
DEBUG=tubey:*
ENABLE_SWAGGER=true
